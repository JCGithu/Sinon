{ 
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "watch": true,
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true 
    },
    "exclude": [ "node_modules" ] 
}