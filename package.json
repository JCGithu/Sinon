{
  "name": "sinon",
  "version": "1.3.2",
  "description": "A video tool that's actually useful",
  "homepage": "https://colloquial.studio/sinon",
  "main": "./main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JCGithu/Sinon.git"
  },
  "scripts": {
    "start": "electron . --enable-logging",
    "mac": "electron-packager . --app-version 1.3.1 --prune=true --platform darwin --icon=./imgs/sinon.icns --overwrite",
    "build": "electron-builder",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "Sinon",
    "productName": "Sinon",
    "icon": "./imgs/sinon.ico",
    "asar": false,
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": "always",
      "allowToChangeInstallationDirectory": false,
      "createStartMenuShortcut": true,
      "menuCategory": true
    },
    "mac":{
      "icon": "./imgs/sinon.icns",
      "target": "zip"
    },
    "linux": {
      "target": ["AppImage", "snap"],
      "icon": "./imgs/sinon.icns"
    }
  },
  "keywords": [
    "Electron",
    "Sinon",
    "Video",
    "Downloader"
  ],
  "author": {
    "name": "Colloquial",
    "email": "hello@colloquial.studio"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^10.1.6",
    "electron-builder": "^22.9.1",
    "electron-packager": "^14.2.1"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "axios": "^0.20.0",
    "electron-json-storage": "^4.3.0",
    "ffmpeg-static": "^4.2.7",
    "fluent-ffmpeg": "^2.1.2",
    "gifsicle": "^5.1.0",
    "got": "^11.8.0",
    "https-proxy-agent": "^5.0.0",
    "node-fetch": "^2.6.1",
    "parse-url": "^5.0.2",
    "rimraf": "^3.0.2",
    "sweetalert2": "^10.11.1"
  }
}
